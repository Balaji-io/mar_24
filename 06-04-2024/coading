len of string

input_string = input("Enter a string: ")
length = 0
for char in input_string:
    length += 1

print("Length of the string:", length)

      #include <stdio.h>
#include <string.h>

int main() {
    char string1[100] = "Hello, ";
    char string2[] = "world!";
    
    strcat(string1, string2);
    
    printf("Concatenated string: %s\n", string1);
    
    return 0;
}
